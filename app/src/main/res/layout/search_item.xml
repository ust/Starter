<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/rlSearchItem">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbStatus"
        android:layout_gravity="left"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_alignTop="@+id/etName"
        android:layout_toStartOf="@id/etName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/name"
        android:ems="10"
        android:id="@+id/etName"
        android:layout_gravity="left"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/cbStatus" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etAge"
        android:layout_gravity="right"
        android:text="@string/age"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/etName" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvUrls"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/etName" />

</RelativeLayout>